<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>出缺勤系統</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
        {% include "nav.inc.twig" %}

        <!--內容區塊-->
        <main class="container-fluid mt-4">
            <div class="center">
                <h3>歡迎，{{ useracc }}（{{ role }}）</h3>
            </div>
            
            <!-- 訊息顯示區域 -->
            {% if message %}
            <div class="row mb-3">
                <div class="col-12">
                    <div class="alert {{ alert_type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
            {% endif %}
            
            <!-- 管理者學員選擇區域 -->
            {% if role == '管理者' %}
            <div class="row mb-3">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">學員資料查看選項</h6>
                        </div>
                        <div class="card-body">
                            <form method="GET" class="d-flex align-items-center gap-3">
                                <div class="form-group">
                                    <label for="selected_user" class="form-label">選擇學員：</label>
                                    <select name="selected_user" id="selected_user" class="form-select" onchange="this.form.submit()">
                                        <option value="">所有學員統計</option>
                                        {% for user in userList %}
                                            <option value="{{ user }}" {% if selectedUser == user %}selected{% endif %}>{{ user }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div>
                                    {% if selectedUser %}
                                        <span class="badge bg-primary">正在查看：{{ selectedUser }}</span>
                                    {% else %}
                                        <span class="badge bg-success">正在查看：全體學員</span>
                                    {% endif %}
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            
            <!--分成左右2邊的佈區-->
            <div class="row align-items-stretch">
                <!-- 側邊選單 -->
                <div class="col-md-2">
                    {% include "menu.inc.twig" %}
                </div>

                <!-- 左邊：統計資訊卡 -->
                <div class="col-md-5">
                    <div class="card mb-3 shadow-sm rounded-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                {% if role == '管理者' %}
                                    {% if selectedUser %}
                                        {{ selectedUser }} 的課程統計
                                    {% else %}
                                        全體學員課程統計
                                    {% endif %}
                                {% else %}
                                    個人課程統計
                                {% endif %}
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">總課程時數：<strong>{{ total_class_hours }}</strong></p>
                            <p class="card-text">總課程數：<strong>{{ total_classs }}</strong></p>
                            <p class="card-text">總天數：<strong>{{ total_days }}</strong></p>
                            <p class="card-text">出席率：<strong>{{ attendance_rate }}%</strong></p>
                            <p class="card-text">遲到率：<strong>{{ late_rate }}%</strong></p>
                            <p class="card-text">早退率：<strong>{{ leave_early_rate }}%</strong></p>
                            <p class="card-text">平均到校時數：<strong>{{ average_raw_hours }}</strong></p>
                        </div>
                    </div>
                </div>

                <!-- 右邊：圖表卡 -->
                <div class="col-md-5">
                    <div class="card mb-3 shadow-sm rounded-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                {% if role == '管理者' %}
                                    {% if selectedUser %}
                                        {{ selectedUser }} 的各課程出席率
                                    {% else %}
                                        全體學員各課程出席率
                                    {% endif %}
                                {% else %}
                                    個人各課程出席率
                                {% endif %}
                            </h5>
                        </div>
                        <div class="card-body">
                            <canvas id="classChart" width="100%" height="60"></canvas>
                        </div>
                    </div>
                </div>
            </div>

        </main>
    <footer class="position-absolute bottom-0">
        {% include "footer.inc.twig" %}
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>

        const ctx = document.getElementById('classChart').getContext('2d');
        const classChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: {{ class_names|json_encode|raw }},
                datasets: [{
                    label: '出席率 (%)',
                    data: {{ class_attendance_rates|json_encode|raw }},
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        title: { display: true, text: '出席率 (%)' }
                    },
                    x: {
                        title: { display: true, text: '課程名稱' }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y + "%";
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>