<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <title>權限管理系統</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
{% include "nav.inc.twig" %}


<!--內容區塊-->
<main class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-2">
            {% include "menu.inc.twig" %}
        </div>
        <div class="col-md-10">
            <h2 class="mb-4">使用者權限管理</h2>

            <form method="POST" action="save_permissions.php">
                <div class="mb-3">
                <label class="form-label">選擇使用者</label>
                <select class="form-select" name="user_id" onchange="location.href='permission.php?user_id=' + this.value">
                    {% for u in users %}
                    <option value="{{ u.id }}" {{ selectedUserId == u.id ? 'selected' : '' }}>
                        {{ u.name }}
                    </option>
                    {% endfor %}
                </select>
                </div>

            <!-- 權限表格 -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                    <th>模組</th>
                    <th>查看</th>
                    <th>新增</th>
                    <th>編輯</th>
                    <th>刪除</th>
                    </tr>
                </thead>
                <tbody>
                    {% for module in modules %}
                    {% set perm = permMap[module]|default({'can_view':0,'can_create':0,'can_edit':0,'can_delete':0}) %}
                    <tr>
                        <td>{{ module }}</td>
                        {% for action in ['view', 'create', 'edit', 'delete'] %}
                        <td>
                            <input type="checkbox"
                                name="perm[{{ module }}][{{ action }}]"
                                {{ attribute(perm, 'can_' ~ action) ? 'checked' : '' }}>
                        </td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

                <input type="hidden" name="user_id" value="{{ selectedUserId }}">
                <button type="submit" class="btn btn-primary">儲存設定</button>
            </form>
        </div>
    </div>
<main>

    {% include "footer.inc.twig" %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
